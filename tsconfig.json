{
    "compilerOptions": {
        "lib": ["DOM", "ES2021", "WebWorker"],
        "target": "es2021",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "strictPropertyInitialization": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ]
}
